{
  "source": "./path/to/src",
  "destination": "./path/to/build",
  "clean":true,
  "metadata": {
    "site": {
      "title": "",
      "url": "",
      "author": "",
    }
  },
  "plugins": {
    "metalsmith-markdown":false,
    "metalsmith-templates": "handlebars",
    "metalsmith-register-partials":
    {
      "directory":"path/to/partials",
      "engine":"handlebars"
    },
    "metalsmith-sass":
    {
        "files":["*.scss"],
        "includePaths":["path/to/sass/folder"],
        "outputDir":"css",
        "watch":"*.scss"
    },
    "metalsmith-autoprefixer":
    {
      "files":{
        "build/css/style.css":"style.css"
      },
      "browsers":"last 8 versions"
    },
    "metalsmith-concat":
    {
      "files":["path/to/js/files"],
      "output":"js/bundle.js"
    },
    "metalsmith-ignore":[".git",".gitignore","README.md",".json"],
    "metalsmith-browser-sync":{
      "proxy":"",
      "port":8080,
      "files":""
    }
  }
}
